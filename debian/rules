#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE=1
export PYBUILD_NAME=katversion

%:
	dh $@ --with python2,python3 --buildsystem=pybuild --parallel

override_dh_auto_clean:
	dh_clean
	rm -rf .eggs
	find katversion -name "*.pyc" -delete
	rm -rf .pybuild
	rm -rf build
	rm -rf *.egg-info

override_dh_auto_test:
	true

override_dh_auto_install:
	dh_auto_install
	rm -rf debian/python3-katversion/usr/bin/kat-get-version.py
	mkdir -p debian/katversion/usr/bin
	mv debian/python-katversion/usr/bin/kat-get-version.py debian/katversion/usr/bin
